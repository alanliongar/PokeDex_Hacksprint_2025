<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style
        name="Theme.PokedexApp"
        parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item
            name="colorPrimary">@color/purple_500
        </item>
        <item
            name="colorPrimaryVariant">@color/purple_700
        </item>
        <item
            name="colorOnPrimary">@color/white
        </item>
        <item
            name="colorSecondary">@color/teal_200
        </item>
        <item
            name="colorSecondaryVariant">@color/teal_700
        </item>
        <item
            name="colorOnSecondary">@color/black
        </item>
        <item
            name="android:statusBarColor">?attr/colorPrimaryVariant
        </item>
    </style>

    <style name="ButtonStylePurple" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/teal_300</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ButtonStyleTeal" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/teal_300</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>